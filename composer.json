{
    "name": "tim-ma-unggul-sabira/science-quran-integration",
    "description": "Aplikasi web edukatif berbasis AI yang menghubungkan pengetahuan sains modern dengan ayat-ayat Al-Qur'an",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Tim MA Unggul Sabira",
            "email": "tim@sciencequranintegration.local"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "ext-openssl": "*"
    },
    "autoload": {
        "psr-4": {
            "ScienceQuranIntegration\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S localhost:8000 -t .",
        "dev": "php -S localhost:8000 -t ."
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}